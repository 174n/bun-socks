{
	"compilerOptions": {
		"target": "ES2020",
		"module": "ESNext",
		"lib": ["ES2020"],
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"allowJs": true,
		"strict": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"outDir": "dist",
		"rootDir": ".",
		"types": ["@types/bun"]
	},
	"include": ["fetch.ts"],
	"exclude": ["node_modules", "dist", "*.test.ts"]
}
